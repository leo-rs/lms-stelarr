<Page x:Class="WPFSTELARR1.LessonPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFSTELARR1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LessonPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Margin="20" Name="TopText" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Choose a Module from the combo box above." FontSize="18" />
        <TextBlock Grid.Row="1" Margin="20" Name="BottomText" HorizontalAlignment="Left" TextWrapping="Wrap" FontSize="18"/>
    </Grid>
</Page>
